<odoo>
    <record id="student_report_wizard_view_form" model="ir.ui.view">
        <field name="name">student.report.wizard.view.form</field>
        <field name="model">student.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Student Attendance Report">
                <sheet>
                    <group>
                        <field name="academic_year_id" />
                        <field name="admission_class_id" />
                    </group>

                    <footer>
                        <button string="Print Excel" type="object" name="action_print_xlsx"
                            class="btn-primary" />
                        <button string="Cancel" special="cancel" class="btn-secondary" />
                    </footer>

                </sheet>
            </form>
        </field>
    </record>
</odoo>


